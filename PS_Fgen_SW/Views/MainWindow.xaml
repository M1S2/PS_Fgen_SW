<hc:Window x:Class="PS_Fgen_SW.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:local="clr-namespace:PS_Fgen_SW.Views"
        xmlns:mvvmlight="http://www.galasoft.ch/mvvmlight"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800"
        DataContext="{Binding Source={StaticResource Locator}, Path=Main}">

    <!-- Trigger the WindowClosing command if the window is closing, see http://heyyan.com/blog/closingeventmvvmlighttoolkit/ -->
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Closing">
            <mvvmlight:EventToCommand Command="{Binding WindowClosing}" PassEventArgsToCommand="True"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <StackPanel Orientation="Vertical">
        <TextBlock Text="{Binding StatusStr}"/>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Voltage:"/>
            <TextBox Text="{Binding Device.PS_Channel.Voltage, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Margin="10,0,10,0" MinWidth="50"/>
            <TextBlock Text="V" VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Current:"/>
            <TextBox Text="{Binding Device.PS_Channel.Current, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Margin="10,0,10,0" MinWidth="50"/>
            <TextBlock Text="A" VerticalAlignment="Center"/>
        </StackPanel>
        <TextBlock Text="{Binding Device.PS_Channel.MeasuredVoltage, StringFormat=Measured Voltage: {0} V}"/>
        <TextBlock Text="{Binding Device.PS_Channel.MeasuredCurrent, StringFormat=Measured Current: {0} A}"/>
        <ToggleButton Width="40" Height="Auto" HorizontalAlignment="Left" Margin="10" IsChecked="{Binding Device.PS_Channel.Enabled, Mode=TwoWay}" BorderThickness="0" Style="{StaticResource ToggleButtonFlip}">
            <hc:StatusSwitchElement.CheckedElement>
                <Border Background="{DynamicResource SuccessBrush}">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="On" Foreground="{DynamicResource TextIconBrush}"/>
                </Border>
            </hc:StatusSwitchElement.CheckedElement>
            <Border Background="{DynamicResource DangerBrush}">
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="Off" Foreground="{DynamicResource TextIconBrush}"/>
            </Border>
        </ToggleButton>

        <!--******************************************************************************************************************************************************-->
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="OVP State:"/>
            <ToggleButton IsChecked="{Binding Device.PS_Channel.OvpState, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Margin="10,0,10,0" MinWidth="50" Style="{StaticResource ToggleButtonSwitch}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="OVP Level:"/>
            <TextBox Text="{Binding Device.PS_Channel.OvpLevel, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Margin="10,0,10,0" MinWidth="50"/>
            <TextBlock Text="%" VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="OVP Delay:"/>
            <TextBox Text="{Binding Device.PS_Channel.OvpDelay, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Margin="10,0,10,0" MinWidth="50"/>
            <TextBlock Text="s" VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="OVP Tripped:"/>
            <CheckBox IsChecked="{Binding Device.PS_Channel.OvpTripped, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" Margin="10,0,10,0" MinWidth="50"/>
        </StackPanel>
        <!--******************************************************************************************************************************************************-->
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="OCP State:"/>
            <ToggleButton IsChecked="{Binding Device.PS_Channel.OcpState, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Margin="10,0,10,0" MinWidth="50" Style="{StaticResource ToggleButtonSwitch}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="OCP Level:"/>
            <TextBox Text="{Binding Device.PS_Channel.OcpLevel, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Margin="10,0,10,0" MinWidth="50"/>
            <TextBlock Text="%" VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="OCP Delay:"/>
            <TextBox Text="{Binding Device.PS_Channel.OcpDelay, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Margin="10,0,10,0" MinWidth="50"/>
            <TextBlock Text="s" VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="OCP Tripped:"/>
            <CheckBox IsChecked="{Binding Device.PS_Channel.OcpTripped, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" Margin="10,0,10,0" MinWidth="50"/>
        </StackPanel>
        <!--******************************************************************************************************************************************************-->
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="OPP State:"/>
            <ToggleButton IsChecked="{Binding Device.PS_Channel.OppState, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Margin="10,0,10,0" MinWidth="50" Style="{StaticResource ToggleButtonSwitch}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="OPP Level:"/>
            <TextBox Text="{Binding Device.PS_Channel.OppLevel, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Margin="10,0,10,0" MinWidth="50"/>
            <TextBlock Text="W" VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="OPP Delay:"/>
            <TextBox Text="{Binding Device.PS_Channel.OppDelay, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Margin="10,0,10,0" MinWidth="50"/>
            <TextBlock Text="s" VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="OPP Tripped:"/>
            <CheckBox IsChecked="{Binding Device.PS_Channel.OppTripped, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" Margin="10,0,10,0" MinWidth="50"/>
        </StackPanel>
        <!--******************************************************************************************************************************************************-->
        <Button Height="30" Margin="10" HorizontalAlignment="Left" Content="Clear PS Channel Protections" Command="{Binding Device.PS_Channel.ClearProtections}" Style="{StaticResource ButtonPrimary}"/>

        <Button Height="30" Margin="10" HorizontalAlignment="Left" Content="Write to device" Command="{Binding WriteToDeviceCommand}" Style="{StaticResource ButtonPrimary}"/>
    </StackPanel>
</hc:Window>
